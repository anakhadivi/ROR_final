<h1>Create a new post</h1>

<%=form_for @post, :html => { :multipart => true} do |f|%>
	<%=f.label :title %>
	<%=f.text_field :title %>
	<%=f.label :location%>
	<%=f.text_field :location%>
	<%=f.label :description%>
	<%=f.text_field :description%>
	<%=f.label :image%>
	<%=f.file_field :image%>
	<%=f.submit :submit%>
<%end%>